<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bth.rushhour.makindu.mrush.Additemclass.Specialist_upload">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/headert"
                android:layout_height="wrap_content"
                android:text="Andikisha kazi unayoifanya hapa ili wateja wakupate kwa urahisi(na unaifanyia wapi)"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:padding="5dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewup"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/headert"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon"
                android:scaleType="centerCrop"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <EditText
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:focusable="true"
                android:maxLength="25"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageViewup"
                android:hint="Enter your name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/textViewJobShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewName"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="Describe your what you do here"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <RatingBar
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewJobShortDesc"
                android:rating="3"
                android:layout_marginTop="5dp"
                style="?android:attr/ratingBarStyleSmall" />


            <EditText
                android:id="@+id/textViewPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textRating"
                android:phoneNumber="true"
                android:hint="Phone number"
                android:maxLength="10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/uploadbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textViewPhone"
                android:text="Submit" />

        </RelativeLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
